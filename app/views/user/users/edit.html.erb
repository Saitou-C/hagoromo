<h2>プロフィール編集</h2>
<%= form_with model: @user do |f| %>
    <label for="inputImage">プロフィール画像</label>
    <%= f.file_field :profile_image, accept: "image/*" %><br>

    <label for="inputName">名前</label>
    <%= f.text_field :name, autofocus: true, id:"inputName" %><br>

    <div class="form-group">
        <label for="inputText">自己紹介</label>
        <%= f.text_field :introduction, autofocus: true, id:"inputText" %>
    </div>

    <div>
        <%= f.submit "変更を保存" %>
    </div>
    <div>
        <%=link_to "退会する", confirm_withdraw_path(current_user.id) %>
    </div>
<% end %>