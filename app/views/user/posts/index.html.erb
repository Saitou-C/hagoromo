<div class="card-list-container py-5 bg-info">
  
  <div>
  <% @posts.each do |post| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
      <%=link_to post_path(post.id) do %>
        <%= image_tag post.get_image(300,300), class: "card-img-top"; %>
      <% end %>
      
      <div class="card-body">
        <div class="row bg-danger">
          
          <div class="col-3">
            <%= image_tag post.user.get_profile_image(80,80), class: "mt-3 rounded-circle"; %>
          </div>
          
          <div class="col-6 bg-info pl-3">
            <p><%= post.user.name %></p>
            <p>♥<%= post.favorites.count %> いいね コメント数<%= post.post_comments.count %></p>
          </div>
          
        </div>
      </div>
      
    </div>
  <% end %>
  </div>

<%= paginate @posts %>
</div>