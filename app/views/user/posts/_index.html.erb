<!--記事検索結果一覧-->
<div class="card-list-container">
  <% if posts.any? %>
  
    <div class="d-flex flex-wrap justify-content-start">
    <% posts.each do |post| %>
      <div class="card mx-auto mt-4">
        <%= link_to post, class: "post_#{post.id}" do %>
          <%= image_tag post.get_image(500,500), class: "card-img-top", style: "width: 300px; height: 300px; object-fit:cover;" %>
        <% end %>
  
        <div class="card-body">
          <div class="row">
  
            <div class="col-4">
              <%= image_tag post.user.get_profile_image(80,80), class: "rounded-circle" %>
            </div>
  
            <div class="col-7">
              <p><%= post.user.name %><br>
              ♥<%= post.favorites.count %> コメント数<%= post.post_comments.count %></p>
            </div>
  
          </div>
        </div>
  
      </div>
    <% end %>
    </div>

  <% else %>
    検索結果が見つかりませんでした。
  <% end %>

  <div class="pagination justify-content-center">
    <%= paginate @records %>
  </div>

</div>