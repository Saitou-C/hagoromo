<% if @post.errors.any? %>
  <div class="alert alert-danger" role="alert">
    画像が選択されていません
  </div>
<% end %>

<div class="d-flex justify-content-center py-4 mt-3">
  <div class="mx-auto">
    <%= form_with model: @post do |f| %>

      <div class="d-flex justify-content-center">
        <%= f.file_field :image, accept: "image/*" %>
      </div>

      <div class="field mt-3">
        <%= f.text_area :caption, class:"form-control", style:"width:600px", placeholder:"キャプション" %>
      </div>

      <div class="form-group">
        <%= f.text_field :tagname, class:"form-control", placeholder:"タグ(スペースで区切ると複数タグを登録できます)" %>
      </div>

      <div class="d-flex justify-content-center">
        <%= f.submit '投稿する', class:"btn btn-lg btn-info mt-4" %>
      </div>
    <% end %>
  </div>
</div>