<div><%= render 'layouts/error_messages', resource: @user %></div>
<div><%#= render "user/shared/error_messages", resource: resource %><!--初期deviseのエラーメッセージ--></div>
<div class="d-flex align-items-center py-4 mt-5">
  <div class="mx-auto" style="width: 300px;">
    <h2 class="mb-4 text-center">新規会員登録</h2>

    <%= form_with model: @user, url: user_registration_path do |f| %>

      <div class="field mb-2">
        <%= f.label :name %><br>
        <%= f.text_field :name , autofocus: true, class: "form-control", placeholder:"ニックネーム" %>
      </div>

      <div class="field mb-2">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email",class: "form-control", placeholder:"メールアドレス" %>
      </div>

      <div class="field mb-2">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password",class: "form-control", placeholder:"パスワード" %>
      </div>

      <div class="field mb-2">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control", placeholder:"パスワード(確認用)" %>
      </div>

      <div class="actions">
        <%= f.submit "会員登録", class:"btn btn-lg btn-block btn-info mt-4" %>
      </div>
    <% end %>

    <div class="mt-2">
      <%= render "user/shared/links" %>
    </div>
  </div>
</div>