<div class="m-5" style="max-width:900px;">
  <h3>
    <%= image_tag @user.get_profile_image(100,100) %>
    <%= @user.name %>の投稿記事一覧
  </h3>
  <%= link_to "戻る", admin_user_path(@user), class: "btn btn-primary" %>

  <table class="table">
    <thead class="bg-secondary">
      <tr class="text-light">
        <th>投稿画像</th>
        <th>説明</th>
        <th>投稿日時</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
         <td><%= image_tag post.get_image(200,200) %></td>
          <td><%= post.caption %></td>
          <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= link_to "削除する", admin_post_path(post.user_id), method: :delete, "data-confirm" => "削除します。本当によろしいですか？", class: "btn btn-danger" %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <div>
    <% if @user.posts.any? %>
      <% else %>
        まだ記事は投稿されていません。
    <% end %>
  </div>

  <div class="pagination justify-content-center">
    <%= paginate(@posts) %>
  </div>

</div>