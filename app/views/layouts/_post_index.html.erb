<div class="card-list-container">

  <div class="d-flex flex-wrap justify-content-start">
    <% posts.each do |post| %>
      <div class="card mx-auto mt-4">
        <%=link_to post_path(post.id) do %>
          <%= image_tag post.get_image(500,500), class: "card-img-top", style: "width: 300px; height: 300px; object-fit:cover;" %>
        <% end %>

        <div class="card-body">
          <div class="row">

            <div class="col-4">
              <%= image_tag post.user.get_profile_image(80,80), class: "rounded-circle" %>
            </div>

            <div class="col-7">
              <div><%= post.user.name %></div>
              <div>
                <i class="fa-solid fa-heart"></i><%= post.favorites.count %>
                <i class="fa-regular fa-comment ml-2"></i><%= post.post_comments.count %>
              </div>
              <!--
              <i class="fa-regular fa-temperature-quarter"></i>
              気温-->
              <!--
              <i class="fa-regular fa-calendar-plus">カレンダー</i>
              季節-->
            </div>

          </div>
        </div>

      </div>
    <% end %>
  </div>

  <div class="pagination justify-content-center">
    <%= paginate posts %>
  </div>

</div>